---
import Layout from "../components/Layout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import FormattedDate from "../components/FormattedDate.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import profilePic from "../assets/profile.jpeg";

const posts = await getCollection("blog");
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <div class="grid grid-cols-12 gap-8 mb-16">
    <div
      class="col-span-12 md:col-span-4 flex flex-col items-center text-center"
    >
      <Image
        src={profilePic}
        alt="Eugen Eistrach"
        width={128}
        height={128}
        loading="eager"
        class="rounded-full object-cover shadow-lg w-32 h-32 mb-4"
      />
      <h1 class="text-4xl font-bold text-gray-900">Eugen Eistrach</h1>
    </div>
    <div
      class="col-span-12 md:col-span-8 flex flex-col justify-center text-2xl"
    >
      <p>
        I wear <span class="text-blue-500">many hats </span>
        at Konecranes, keeping our ecom platform in top shape. Whether it's test
        automation, code reviews, deployments, or even stepping in to handle development
        and support, I thrive on the <span class="text-green-500"
          >dynamic nature of my role</span
        >.
      </p>

      <p class="mt-4">
        In my personal time, I'm <span class="text-yellow-500"
          >driven by curiosity and a love for learning</span
        >. Whether I'm <span class="text-purple-500"
          >exploring new technologies</span
        >, enjoying a run, or picking up new hobbies, I constantly try to
        challenge myself.
      </p>
    </div>
  </div>

  <section>
    <h2 class="text-2xl font-bold text-gray-900 mb-8">Writing</h2>
    <ul class="grid grid-cols-1 md:grid-cols-2 gap-8 list-none">
      {
        posts.map((post, index) => (
          <li class="md:first:col-span-2 first:text-center">
            <a href={`/blog/${post.id}/`} class="block group">
              <Image
                src={post.data.heroImage}
                alt=""
                width={720}
                height={360}
                transition:name={`hero-${post.id}`}
                loading={index === 0 ? "eager" : "lazy"}
                class="rounded-lg mb-4 transition-shadow group-hover:shadow-lg"
              />
              <h3
                class="text-2xl md:text-4xl font-bold text-gray-900 mb-2 group-hover:text-blue-600
                text-center"
                transition:name={`title-${post.id}`}
              >
                {post.data.title}
              </h3>
              <p
                class="text-gray-600 text-center"
                transition:name={`date-${post.id}`}
              >
                <FormattedDate date={post.data.pubDate} />
              </p>
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</Layout>
